        </div>
        <div class="col-md-8">
            <h3>
                <%= user.username %>'s campgrounds:</h3>
            <ul>
                <% campgrounds.forEach(function(campground){ %>
                    <li>
                        <a href="/campgrounds/<%= campground.id %>">
                            <%= campground.name %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
